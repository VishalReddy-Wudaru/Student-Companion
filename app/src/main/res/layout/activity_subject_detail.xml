<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subject_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal_pc.project.SubjectDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t9"
        android:layout_marginTop="60dp"
        android:hint="Subject"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t10"
        android:hint="Faculty"
        android:layout_marginTop="20dp"
        android:layout_below="@id/t9"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t11"
        android:hint="Classes Attended"
        android:layout_marginTop="20dp"
        android:layout_below="@id/t10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t12"
        android:hint="Total Classes"
        android:layout_marginTop="20dp"
        android:layout_below="@id/t11"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t13"
        android:hint="Related"
        android:layout_marginTop="20dp"
        android:layout_below="@id/t12"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percentage"
        android:id="@+id/t19"
        android:layout_marginTop="20dp"
        android:layout_below="@id/t13"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/delete"
        android:id="@+id/b12" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back"
        android:id="@+id/b13"
        android:onClick="backToSubDisplay1"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/edit"
        android:id="@+id/b20"
        android:layout_toLeftOf="@id/b12"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/no"
        android:id="@+id/b16"
        android:layout_alignBaseline="@+id/b15"
        android:layout_alignBottom="@+id/b15"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/yes"
        android:id="@+id/b15"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/t19"
        android:layout_alignParentStart="true" />


</RelativeLayout>
</ScrollView>