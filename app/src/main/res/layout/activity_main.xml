<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal_pc.project.MainActivity">



    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/b1"
        android:background="@drawable/notes"
        android:onClick="notes"
        />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/subject"
        android:id="@+id/b14"
        android:onClick="subjects"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/b21"
        android:onClick="bunk"
        android:layout_below="@+id/b1"
        android:background="@drawable/bunk"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/b22"
        android:background="@drawable/timetable1"
        android:onClick="timetable"
        android:layout_alignTop="@+id/b21"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b1"
        android:text="Notes"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Subject"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:layout_below="@+id/b14"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Bunk"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:layout_below="@+id/b21"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Time Table"
        android:textStyle="bold"
        android:textSize="20dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:layout_below="@+id/b22"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView3" />


</RelativeLayout>
