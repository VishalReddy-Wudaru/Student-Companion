<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subject_input"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal_pc.project.SubjectInput">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t8"
        android:text="Subjects"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/b10" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t8"
        android:layout_marginTop="30dp"
        android:hint="Subject"
        android:id="@+id/e3"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/e3"
        android:layout_marginTop="30dp"
        android:hint="Faculty"
        android:id="@+id/e4"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/e4"
        android:layout_marginTop="20dp"
        android:hint="Related Notes"
        android:gravity="top"
        android:id="@+id/e5"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/b10"
        android:background="@drawable/save"
        android:onClick="saveSubject"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/b11"
        android:background="@drawable/cancel"
        android:layout_alignParentEnd="true"
        android:onClick="backToSubDisplay"/>

</RelativeLayout>

</ScrollView>
